<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/btn_corners_20d"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginHorizontal="5dp"
        android:id="@+id/ll_popup_size"
        android:background="@drawable/btn_corners_20d"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baemin"
            android:gravity="center"
            android:paddingHorizontal="50dp"
            android:paddingTop="80dp"
            android:paddingBottom="70dp"
            android:text="dd"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_no"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/btn_ebebeb_left_bottom_radius_bg"
                android:fontFamily="@font/baemin"
                android:text="@string/confirm_no"
                android:textColor="#595857"
                android:textSize="18dp" />

            <Button
                android:fontFamily="@font/baemin"
                android:id="@+id/btn_yes"
                android:text="@string/confirm_ok"
                android:background="@drawable/btn_right_bottom_radius_bg"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="80dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>