<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingHorizontal="20dp"
    tools:context=".fragment.AddReviewFragment">

    <TextView
        android:id="@+id/title"
        android:textColor="@color/black"
        android:text="후기 작성 화면\n\n터치를 통해 별점을 입력해주세요!"
        android:gravity="center"
        android:textSize="20dp"
        android:fontFamily="@font/baemin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <RatingBar
        android:id="@+id/ratingBar"
        android:padding="20dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:isIndicator="false"
        android:secondaryProgressTint="@android:color/transparent"
        android:progressTint="@color/quantum_yellow"
        android:progressBackgroundTint="@color/color_e3e3e3"
        android:backgroundTint="@color/quantum_yellow"
        android:numStars="5"
        android:stepSize="0.5"
        android:animationResolution="0"
        android:stateListAnimator="@null"
        android:rating="3.5" />

    <ScrollView
        android:layout_below="@+id/ratingBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="15dp"
            android:background="@drawable/radius_gray_20d"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:fontFamily="@font/baemin"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:text="식당 장소"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.gms.maps.MapView
                android:id="@+id/map"
                android:visibility="gone"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

            <Button
                android:id="@+id/btn_search"
                android:text="검색을 위해 여기를 클릭하세요!"
                android:padding="15dp"
                android:drawableStart="@drawable/baseline_search_24"
                android:fontFamily="@font/baemin"
                android:textColor="#999999"
                android:background="@drawable/btn_corners_20d"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:visibility="d"
                android:id="@+id/ll_shop_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baemin"
                    android:textSize="10dp"
                    android:text="매장명"/>

                <TextView
                    android:id="@+id/tv_shop_title"
                    android:padding="4dp"
                    android:textSize="12dp"
                    android:text=""
                    android:fontFamily="@font/baemin"
                    android:enabled="false"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baemin"
                    android:textSize="10dp"
                    android:text="주소"/>

                <TextView
                    android:id="@+id/tv_shop_address"
                    android:padding="4dp"
                    android:textSize="12dp"
                    android:text=""
                    android:fontFamily="@font/baemin"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <View
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#a9a9a9"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baemin"
                    android:textSize="15dp"
                    android:layout_marginVertical="10dp"
                    android:text="제목"/>

                <EditText
                    android:id="@+id/et_review_title"
                    android:background="@drawable/btn_corners_20d"
                    android:padding="10dp"
                    android:textSize="12dp"
                    android:text=""
                    android:hint="리뷰 제목을 입력하세요"
                    android:fontFamily="@font/baemin"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baemin"
                    android:textSize="15dp"
                    android:layout_marginVertical="10dp"
                    android:text="리뷰 내용"/>

                <EditText
                    android:id="@+id/et_review_content"
                    android:background="@drawable/btn_corners_20d"
                    android:padding="10dp"
                    android:textSize="12dp"
                    android:hint="리뷰 내용을 입력하세요"
                    android:fontFamily="@font/baemin"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baemin"
                    android:textSize="15dp"
                    android:layout_marginVertical="10dp"
                    android:text="사진 추가 (최대 3장)"/>

                <LinearLayout
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_review_image"
                        android:layout_weight="1"
                        android:scaleType="centerCrop"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:src="@drawable/no_image"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>